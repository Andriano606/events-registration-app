<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="col-4">
    <div class="card">
      <div class="card-body">
        <form action="/register" method="post">
          <input type="hidden" id="eventId" name="eventId" value="<%= event.id %>">

          <div class="mb-3">
            <label for="fullName" class="form-label">Full Name:</label>
            <input type="text" class="form-control" id="fullName" name="fullName">
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email">
          </div>

          <div class="mb-3">
            <label for="dob" class="form-label">Date of Birth:</label>
            <input type="date" class="form-control" id="dob" name="dob">
          </div>

          <div class="mb-3">
            <p>Where did you hear about this event?</p>
            <div class="row">
              <div class="col">
                <input class="form-check-input" type="checkbox" value="Social media" id="source1" name="source">
                <label class="form-check-label" for="source1">
                  Social media
                </label>
              </div>
              <div class="col">
                <input class="form-check-input" type="checkbox" value="Friends" id="source2" name="source">
                <label class="form-check-label" for="source2">
                  Friends
                </label>
              </div>
              <div class="col">
                <input class="form-check-input" type="checkbox" value="Found myself" id="source3" name="source">
                <label class="form-check-label" for="source3">
                  Found myself
                </label>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <input type="submit" class="btn btn-primary" value="Submit">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>